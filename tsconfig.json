{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
